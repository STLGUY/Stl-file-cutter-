    <!-- 3D CANVAS -->
    <div id="canvas-container" class="w-full h-screen"></div>

    <!-- APP LOGIC -->
    <script type="module">
        import * as THREE from 'three';
        import { OrbitControls } from 'three/addons/controls/OrbitControls.js';
        import { STLLoader } from 'three/addons/loaders/STLLoader.js';
        import { STLExporter } from 'three/addons/exporters/STLExporter.js';
        import { Brush, Evaluator, INTERSECTION } from 'three-bvh-csg';

        // --- STATE & CONFIG ---
        const state = {
            mode: 'auto', // 'auto' or 'manual'
            subMode: 'printer', // 'printer' or 'count'
            bounds: null,
            loaded: false,
            helpers: [], // Array of visual plane meshes
            originalGeo: null // Store original geometry for non-destructive scaling
        };

        // --- UI ELEMENTS ---
        const ui = {
            fileInput: document.getElementById('fileInput'),
            fileName: document.getElementById('fileNameDisplay'),
            orientSec: document.getElementById('orientationSection'),
            resizeSec: document.getElementById('resizeSection'),
            sliceSec: document.getElementById('sliceControls'),
            uiAuto: document.getElementById('uiAuto'),
            uiManual: document.getElementById('uiManual'),
            tabAuto: document.getElementById('tabAuto'),
            tabManual: document.getElementById('tabManual'),
            subPrinter: document.getElementById('subModePrinter'),
            subCount: document.getElementById('subModeCount'),
            inputsPrinter: document.getElementById('inputsPrinter'),
            inputsCount: document.getElementById('inputsCount'),
            gridText: document.getElementById('gridPreviewText'),
            sliceBtn: document.getElementById('sliceBtn'),
            status: document.getElementById('statusText'),
            dock: document.getElementById('downloadDock'),
            dockList: document.getElementById('downloadButtons'),
            loader: document.getElementById('loader'),
            currHeight: document.getElementById('currHeightDisplay'),
            scaleInputs: {
                height: document.getElementById('targetHeight'),
                unit: document.getElementById('targetUnit'),
                btn: document.getElementById('applyScaleBtn'),
                status: document.getElementById('resizeStatus')
            },
            inputs: {
                manual: {
                    x: { check: document.getElementById('checkX'), slider: document.getElementById('sliderX'), val: document.getElementById('valX') },
                    y: { check: document.getElementById('checkY'), slider: document.getElementById('sliderY'), val: document.getElementById('valY') },
                    z: { check: document.getElementById('checkZ'), slider: document.getElementById('sliderZ'), val: document.getElementById('valZ') }
                },
                auto: {
                    px: document.getElementById('printX'), py: document.getElementById('printY'), pz: document.getElementById('printZ'),
                    cx: document.getElementById('splitX'), cy: document.getElementById('splitY'), cz: document.getElementById('splitZ')
                }
            }
        };

        // --- 3D SCENE GLOBALS ---
        let scene, camera, renderer, controls, mainMesh;

        init();
        animate();

        function init() {
            // Setup Three.js
            const container = document.getElementById('canvas-container');
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x0f172a); 
            
            // Nice Grid
            const grid = new THREE.GridHelper(5000, 200, 0x1e293b, 0x0f172a);
            scene.add(grid);

            // Lighting
            scene.add(new THREE.AmbientLight(0xffffff, 0.6));
            const dl = new THREE.DirectionalLight(0xffffff, 1.2);
            dl.position.set(200, 500, 200);
            scene.add(dl);
            const backLight = new THREE.DirectionalLight(0x6366f1, 0.5); // Indigo backlight
            backLight.position.set(-200, 100, -200);
            scene.add(backLight);

            camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 1, 20000);
            camera.position.set(300, 300, 400);

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: false });
            renderer.setPixelRatio(window.devicePixelRatio);
            renderer.setSize(window.innerWidth, window.innerHeight);
            container.appendChild(renderer.domElement);

            controls = new OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;

            // Event Listeners
            window.addEventListener('resize', onWindowResize);
            ui.fileInput.addEventListener('change', handleUpload);
            
            // Rotation Buttons
            document.getElementById('rotX').onclick = () => rotateMesh('x');
            document.getElementById('rotY').onclick = () => rotateMesh('y');
            document.getElementById('rotZ').onclick = () => rotateMesh('z');
            document.getElementById('resetViewBtn').onclick = resetView;

            // Scale Button
            ui.scaleInputs.btn.onclick = applyScale;

            // Tab Switching
            ui.tabAuto.onclick = () => switchMode('auto');
            ui.tabManual.onclick = () => switchMode('manual');
            ui.subPrinter.onclick = () => switchSubMode('printer');
            ui.subCount.onclick = () => switchSubMode('count');

            // Input Changes (Live Preview)
            // Manual
            ['x','y','z'].forEach(k => {
                ui.inputs.manual[k].slider.addEventListener('input', updateVisuals);
                ui.inputs.manual[k].check.addEventListener('change', updateVisuals);
            });
            // Auto
            Object.values(ui.inputs.auto).forEach(inp => inp.addEventListener('input', updateVisuals));

            // Slicing
            ui.sliceBtn.onclick = performSlice;
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        function animate() {
            requestAnimationFrame(animate);
            controls.update();
            renderer.render(scene, camera);
        }

        // --- FILE HANDLING ---
        function handleUpload(e) {
            const file = e.target.files[0];
            if(!file) return;
            
            ui.fileName.innerText = "Loading " + file.name + "...";
            ui.fileName.classList.add("text-indigo-400");
            
            const reader = new FileReader();
            reader.onload = (evt) => {
                try {
                    const loader = new STLLoader();
                    const geo = loader.parse(evt.target.result);
                    loadModel(geo, file.name);
                } catch(err) {
                    alert("Error parsing STL file. Ensure it is a valid binary/ascii STL.");
                    ui.fileName.innerText = "Error loading file";
                }
            };
            reader.readAsArrayBuffer(file);
        }

        function loadModel(geo, name) {
            if(mainMesh) { scene.remove(mainMesh); mainMesh.geometry.dispose(); }
            // Clean previous cuts
            state.helpers.forEach(h => scene.remove(h));
            state.helpers = [];
            hideDock();

            // Store original
            // Rotate X -90 (Standard STL fix for Z-up)
            geo.rotateX(-Math.PI/2);
            geo.computeBoundingBox();
            geo.center();
            geo.computeBoundingBox();
            geo.translate(0, -geo.boundingBox.min.y, 0);
            
            state.originalGeo = geo.clone(); // Save for scaling

            const mat = new THREE.MeshStandardMaterial({ 
                color: 0x94a3b8, // Slate 400
                roughness: 0.6,
                metalness: 0.2,
                flatShading: true
            });
            
            mainMesh = new THREE.Mesh(geo, mat);
            scene.add(mainMesh);
            state.loaded = true;

            // UI Updates
            ui.fileName.innerText = name;
            document.getElementById('fileStatus').classList.remove('hidden');
            ui.orientSec.classList.remove('hidden');
            ui.resizeSec.classList.remove('hidden');
            ui.sliceSec.classList.remove('hidden');
            ui.scaleInputs.status.classList.add('hidden');

            updateBounds();
            resetView();
            updateVisuals();
        }

        function updateBounds() {
            if(!mainMesh) return;
            const geo = mainMesh.geometry;
            geo.computeBoundingBox();
            const b = geo.boundingBox;
            const size = new THREE.Vector3();
            b.getSize(size);
            const center = new THREE.Vector3();
            b.getCenter(center);

            state.bounds = { min: b.min, max: b.max, size: size, center: center };

            // Update UI Text
            ui.currHeight.innerText = `${size.y.toFixed(1)} mm`;

            // Update Manual Sliders
            const s = ui.inputs.manual;
            s.x.slider.min = b.min.x; s.x.slider.max = b.max.x; s.x.slider.value = center.x;
            s.y.slider.min = b.min.z; s.y.slider.max = b.max.z; s.y.slider.value = center.z; // Y in UI is Z in 3JS
            s.z.slider.min = b.min.y; s.z.slider.max = b.max.y; s.z.slider.value = center.y;
        }

        function rotateMesh(axis) {
            if(!mainMesh) return;
            if(axis === 'x') mainMesh.geometry.rotateX(Math.PI/2);
            if(axis === 'y') mainMesh.geometry.rotateY(Math.PI/2);
            if(axis === 'z') mainMesh.geometry.rotateZ(Math.PI/2);
            
            // Re-center on floor
            mainMesh.geometry.computeBoundingBox();
            mainMesh.geometry.center();
            mainMesh.geometry.computeBoundingBox();
            mainMesh.geometry.translate(0, -mainMesh.geometry.boundingBox.min.y, 0);
            
            // Update originalGeo to match new orientation
            state.originalGeo = mainMesh.geometry.clone();

            updateBounds();
            updateVisuals();
        }

        function applyScale() {
            if(!state.originalGeo || !mainMesh) return;
            
            const val = parseFloat(ui.scaleInputs.height.value);
            if(!val || val <= 0) { alert("Enter a valid height"); return; }
            
            const unit = ui.scaleInputs.unit.value;
            let targetMM = val;
            
            if(unit === 'cm') targetMM = val * 10;
            if(unit === 'in') targetMM = val * 25.4;
            if(unit === 'ft') targetMM = val * 304.8;
            
            // Calculate Scale Factor based on Original Geo
            state.originalGeo.computeBoundingBox();
            const currentH = state.originalGeo.boundingBox.max.y - state.originalGeo.boundingBox.min.y;
            const scale = targetMM / currentH;
            
            // Apply to new geometry
            const newGeo = state.originalGeo.clone();
            newGeo.scale(scale, scale, scale);
            
            // Fix position (floor)
            newGeo.computeBoundingBox();
            newGeo.translate(0, -newGeo.boundingBox.min.y, 0);
            
            mainMesh.geometry.dispose();
            mainMesh.geometry = newGeo;
            
            ui.scaleInputs.status.classList.remove('hidden');
            setTimeout(() => ui.scaleInputs.status.classList.add('hidden'), 2000);
            
            updateBounds();
            updateVisuals();
            resetView(); 
        }

        function resetView() {
            if(!state.bounds) return;
            const maxDim = Math.max(state.bounds.size.x, state.bounds.size.y, state.bounds.size.z);
            const dist = maxDim * 2.0;
            camera.position.set(dist, dist, dist);
            controls.target.copy(state.bounds.center);
            controls.update();
        }

        // --- UI LOGIC ---
        function switchMode(m) {
            state.mode = m;
            if(m === 'auto') {
                ui.tabAuto.className = "bg-indigo-600 text-white py-1.5 rounded text-[11px] font-bold transition-all";
                ui.tabManual.className = "bg-transparent text-slate-400 hover:bg-slate-800 py-1.5 rounded text-[11px] font-bold transition-all";
                ui.uiAuto.classList.remove('hidden');
                ui.uiManual.classList.add('hidden');
            } else {
                ui.tabAuto.className = "bg-transparent text-slate-400 hover:bg-slate-800 py-1.5 rounded text-[11px] font-bold transition-all";
                ui.tabManual.className = "bg-indigo-600 text-white py-1.5 rounded text-[11px] font-bold transition-all";
                ui.uiAuto.classList.add('hidden');
                ui.uiManual.classList.remove('hidden');
            }
            updateVisuals();
        }

        function switchSubMode(m) {
            state.subMode = m;
            if(m === 'printer') {
                ui.subPrinter.className = "flex-1 py-1 bg-indigo-600 text-white transition-colors";
                ui.subCount.className = "flex-1 py-1 bg-slate-800 text-slate-400 hover:text-white transition-colors";
                ui.inputsPrinter.classList.remove('hidden');
                ui.inputsCount.classList.add('hidden');
            } else {
                ui.subPrinter.className = "flex-1 py-1 bg-slate-800 text-slate-400 hover:text-white transition-colors";
                ui.subCount.className = "flex-1 py-1 bg-indigo-600 text-white transition-colors";
                ui.inputsPrinter.classList.add('hidden');
                ui.inputsCount.classList.remove('hidden');
            }
            updateVisuals();
        }

        // --- VISUALIZATION ---
        function updateVisuals() {
            if(!state.loaded) return;

            // 1. Clear old
            state.helpers.forEach(h => scene.remove(h));
            state.helpers = [];

            // 2. Calculate Cuts
            let cutsX = [], cutsY = [], cutsZ = []; 
            
            if(state.mode === 'manual') {
                const m = ui.inputs.manual;
                m.x.slider.disabled = !m.x.check.checked; m.x.slider.style.opacity = m.x.check.checked ? 1 : 0.5;
                m.y.slider.disabled = !m.y.check.checked; m.y.slider.style.opacity = m.y.check.checked ? 1 : 0.5;
                m.z.slider.disabled = !m.z.check.checked; m.z.slider.style.opacity = m.z.check.checked ? 1 : 0.5;

                m.x.val.innerText = m.x.check.checked ? parseFloat(m.x.slider.value).toFixed(1) : "OFF";
                m.y.val.innerText = m.y.check.checked ? parseFloat(m.y.slider.value).toFixed(1) : "OFF";
                m.z.val.innerText = m.z.check.checked ? parseFloat(m.z.slider.value).toFixed(1) : "OFF";

                if(m.x.check.checked) cutsX.push(parseFloat(m.x.slider.value));
                if(m.y.check.checked) cutsY.push(parseFloat(m.y.slider.value));
                if(m.z.check.checked) cutsZ.push(parseFloat(m.z.slider.value));
            } else {
                // Auto Mode
                if(state.subMode === 'printer') {
                    // Logic: Printer Size
                    const pX = parseFloat(ui.inputs.auto.px.value) || 200;
                    const pY = parseFloat(ui.inputs.auto.py.value) || 200;
                    const pZ = parseFloat(ui.inputs.auto.pz.value) || 200;

                    const cX = Math.ceil(state.bounds.size.x / pX);
                    const cY = Math.ceil(state.bounds.size.z / pY); // Depth
                    const cZ = Math.ceil(state.bounds.size.y / pZ); // Height

                    for(let i=1; i<cX; i++) cutsX.push(state.bounds.min.x + (i * (state.bounds.size.x / cX)));
                    for(let i=1; i<cY; i++) cutsY.push(state.bounds.min.z + (i * (state.bounds.size.z / cY)));
                    for(let i=1; i<cZ; i++) cutsZ.push(state.bounds.min.y + (i * (state.bounds.size.y / cZ)));

                    ui.gridText.innerText = `${cX}x${cY}x${cZ} Grid (${cX*cY*cZ} Parts)`;
                } else {
                    // Logic: Count
                    const cX = parseInt(ui.inputs.auto.cx.value) || 1;
                    const cY = parseInt(ui.inputs.auto.cy.value) || 1;
                    const cZ = parseInt(ui.inputs.auto.cz.value) || 1;

                    for(let i=1; i<cX; i++) cutsX.push(state.bounds.min.x + (i * (state.bounds.size.x / cX)));
                    for(let i=1; i<cY; i++) cutsY.push(state.bounds.min.z + (i * (state.bounds.size.z / cY)));
                    for(let i=1; i<cZ; i++) cutsZ.push(state.bounds.min.y + (i * (state.bounds.size.y / cZ)));

                    ui.gridText.innerText = `${cX}x${cY}x${cZ} Grid (${cX*cY*cZ} Parts)`;
                }
            }

            // 3. Draw Planes
            const drawP = (axis, val, color) => {
                const sz = Math.max(state.bounds.size.x, state.bounds.size.y, state.bounds.size.z) * 1.5;
                const geo = new THREE.PlaneGeometry(sz, sz);
                const mat = new THREE.MeshBasicMaterial({ color: color, side: THREE.DoubleSide, transparent: true, opacity: 0.15, depthWrite: false });
                const mesh = new THREE.Mesh(geo, mat);
                const edge = new THREE.LineSegments(new THREE.EdgesGeometry(geo), new THREE.LineBasicMaterial({ color: color, transparent: true, opacity: 0.5 }));
                mesh.add(edge);

                if(axis === 'x') {
                    mesh.rotation.y = Math.PI/2;
                    mesh.position.set(val, state.bounds.center.y, state.bounds.center.z);
                } else if(axis === 'y') { // Depth (Z in 3js)
                    mesh.position.set(state.bounds.center.x, state.bounds.center.y, val);
                } else { // Height
                    mesh.rotation.x = Math.PI/2;
                    mesh.position.set(state.bounds.center.x, val, state.bounds.center.z);
                }
                scene.add(mesh);
                state.helpers.push(mesh);
            };

            cutsX.forEach(v => drawP('x', v, 0xf87171)); // Red
            cutsY.forEach(v => drawP('y', v, 0x4ade80)); // Green
            cutsZ.forEach(v => drawP('z', v, 0x60a5fa)); // Blue
        }

        // --- SLICING ENGINE ---
        async function performSlice() {
            if(!mainMesh) return;
            ui.loader.classList.remove('hidden');
            ui.sliceBtn.disabled = true;

            await new Promise(r => setTimeout(r, 100));

            try {
                let cutsX = [], cutsY = [], cutsZ = [];
                
                if(state.mode === 'manual') {
                    const m = ui.inputs.manual;
                    if(m.x.check.checked) cutsX.push(parseFloat(m.x.slider.value));
                    if(m.y.check.checked) cutsY.push(parseFloat(m.y.slider.value));
                    if(m.z.check.checked) cutsZ.push(parseFloat(m.z.slider.value));
                } else {
                    const b = state.bounds;
                    let cX=1, cY=1, cZ=1;
                    if(state.subMode === 'printer') {
                        cX = Math.ceil(b.size.x / (parseFloat(ui.inputs.auto.px.value)||200));
                        cY = Math.ceil(b.size.z / (parseFloat(ui.inputs.auto.py.value)||200));
                        cZ = Math.ceil(b.size.y / (parseFloat(ui.inputs.auto.pz.value)||200));
                    } else {
                        cX = parseInt(ui.inputs.auto.cx.value)||1;
                        cY = parseInt(ui.inputs.auto.cy.value)||1;
                        cZ = parseInt(ui.inputs.auto.cz.value)||1;
                    }
                    for(let i=1; i<cX; i++) cutsX.push(b.min.x + (i*(b.size.x/cX)));
                    for(let i=1; i<cY; i++) cutsY.push(b.min.z + (i*(b.size.z/cY)));
                    for(let i=1; i<cZ; i++) cutsZ.push(b.min.y + (i*(b.size.y/cZ)));
                }

                cutsX.sort((a,b)=>a-b); cutsY.sort((a,b)=>a-b); cutsZ.sort((a,b)=>a-b);
                const rX = [state.bounds.min.x - 1, ...cutsX, state.bounds.max.x + 1];
                const rY = [state.bounds.min.z - 1, ...cutsY, state.bounds.max.z + 1]; 
                const rZ = [state.bounds.min.y - 1, ...cutsZ, state.bounds.max.y + 1]; 

                const evaluator = new Evaluator();
                evaluator.attributes = ['position', 'normal'];
                const modelBrush = new Brush(mainMesh.geometry);
                modelBrush.updateMatrixWorld();

                const results = [];
                const total = (rX.length-1)*(rY.length-1)*(rZ.length-1);
                if(total > 30) { if(!confirm(`This will create ${total} parts. Continue?`)) throw "Cancelled"; }

                for(let i=0; i<rX.length-1; i++) {
                    for(let j=0; j<rY.length-1; j++) {
                        for(let k=0; k<rZ.length-1; k++) {
                            const w = rX[i+1]-rX[i], d = rY[j+1]-rY[j], h = rZ[k+1]-rZ[k];
                            const cutter = new Brush(new THREE.BoxGeometry(w, h, d));
                            cutter.position.set(rX[i]+w/2, rZ[k]+h/2, rY[j]+d/2);
                            cutter.updateMatrixWorld();

                            const res = evaluator.evaluate(modelBrush, cutter, INTERSECTION);
                            if(res.geometry.attributes.position.count > 0) {
                                results.push({ name: `Part_${i+1}-${j+1}-${k+1}`, brush: res });
                            }
                        }
                    }
                }

                showResults(results);

            } catch(e) {
                console.error(e);
                alert("Slicing Failed: " + e);
            } finally {
                ui.loader.classList.add('hidden');
                ui.sliceBtn.disabled = false;
            }
        }

        function showResults(parts) {
            mainMesh.visible = false;
            state.helpers.forEach(h => h.visible = false);
            if(window.partsMeshes) window.partsMeshes.forEach(m => scene.remove(m));
            window.partsMeshes = [];

            const colors = [0xef4444, 0x3b82f6, 0x22c55e, 0xf59e0b, 0x8b5cf6, 0xec4899];
            
            parts.forEach((p, idx) => {
                const mat = new THREE.MeshStandardMaterial({ 
                    color: colors[idx % colors.length], 
                    roughness: 0.5, metalness: 0.1 
                });
                const mesh = new THREE.Mesh(p.brush.geometry, mat);
                const center = new THREE.Vector3();
                mesh.geometry.computeBoundingBox();
                mesh.geometry.boundingBox.getCenter(center);
                const dir = center.sub(state.bounds.center).normalize().multiplyScalar(15);
                mesh.position.copy(dir);
                scene.add(mesh);
                window.partsMeshes.push(mesh);
            });

            showDock(parts);
        }

        function showDock(parts) {
            ui.dockList.innerHTML = '';
            document.getElementById('partCountLabel').innerText = `${parts.length} Parts Generated`;
            parts.forEach(p => {
                const btn = document.createElement('button');
                btn.className = "flex-shrink-0 bg-slate-800 hover:bg-indigo-600 border border-slate-600 hover:border-indigo-400 text-white p-2 rounded-lg flex flex-col items-center gap-1 transition-all group min-w-[80px]";
                btn.innerHTML = `<span class="text-xl group-hover:scale-110 transition-transform">üíæ</span><span class="text-[10px] font-bold">${p.name}</span>`;
                btn.onclick = () => downloadSTL(p.brush, p.name);
                ui.dockList.appendChild(btn);
            });
            ui.dock.classList.remove('translate-y-32', 'opacity-0');
        }

        function hideDock() {
            ui.dock.classList.add('translate-y-32', 'opacity-0');
        }

        function downloadSTL(brush, name) {
            const exporter = new STLExporter();
            const geo = brush.geometry.clone();
            if(geo.attributes.uv) geo.deleteAttribute('uv');
            if(geo.attributes.color) geo.deleteAttribute('color');
            const result = exporter.parse(new THREE.Mesh(geo), { binary: true });
            const blob = new Blob([result], { type: 'model/stl' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = name + ".stl";
            link.click();
        }

    </script>
</body>
</html>


