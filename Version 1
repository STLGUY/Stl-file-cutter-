            background-color: #68D391;
        }
        
        /* Custom Sliders */
        input[type=range] { -webkit-appearance: none; background: transparent; }
        input[type=range]::-webkit-slider-thumb { -webkit-appearance: none; height: 14px; width: 14px; border-radius: 50%; margin-top: -5px; cursor: pointer; border: 2px solid white; }
        input[type=range]::-webkit-slider-runnable-track { width: 100%; height: 4px; border-radius: 2px; }
        
        /* Slider Colors */
        #sliderZ::-webkit-slider-thumb { background: #3b82f6; } /* Blue */
        #sliderZ::-webkit-slider-runnable-track { background: #1e3a8a; }
        
        #sliderX::-webkit-slider-thumb { background: #ef4444; } /* Red */
        #sliderX::-webkit-slider-runnable-track { background: #7f1d1d; }

        #sliderY::-webkit-slider-thumb { background: #22c55e; } /* Green */
        #sliderY::-webkit-slider-runnable-track { background: #14532d; }

        /* Scrollbar for download list */
        .custom-scroll::-webkit-scrollbar { width: 6px; }
        .custom-scroll::-webkit-scrollbar-track { background: #2d3748; }
